{
    "version": 2,
    "builds": [
      { 
        "src": "api/index.py", 
        "use": "@vercel/python",
        "config": {
          "maxLambdaSize": "50mb"
        }
      }
    ],
    "routes": [
      { "src": "/admin/(.*)", "dest": "api/index.py" },
      { "src": "/static/(.*)", "dest": "api/index.py" },
      { "src": "/media/(.*)", "dest": "api/index.py" },
      { "src": "/(.*)", "dest": "api/index.py" }
    ],
    "env": {
      "VERCEL": "1"
    }
  }
  